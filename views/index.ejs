<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WeTech Blog</title>
    <link rel="stylesheet" href="./styles.css" />
    <link rel="stylesheet" href="./bg.css" />
    <link rel="icon" href="./Assets/we tech.png" />
    <link
      rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
    />
  </head>

  <body>
    <nav class="section-p1 section-m1">
      <div class="logo">
        <img src="./Assets/we tech.png" alt="" />
      </div>
      <div class="list">
        <% if (login) { %>
        <li><a href="./home">Home</a></li>
        <li><a href="./profile">Profile</a></li>
        <li><a href="./publish" class="active">Publish</a></li>
        <li><a href="./signout">Logout</a></li>
        <% } else { %>
        <li><a href="./">Home</a></li>
        <li><a href="./signin" class="active">Accounts</a></li>
        <% } %>
        <li id="times"><i class="far fa-times times"></i></li>
      </div>
      <div class="hamburger">
        <i class="fas fa-outdent"></i>
      </div>
    </nav>

    <!-- Random Post -->
    <% if (posts.length> 0) { %> <% const randomIndex=Math.floor(Math.random() *
    posts.length); %> <% const randomPost=posts[randomIndex]; %>
    <section class="first section-p1">
      <a class="nolink" href="/post/<%= randomPost.id %>">
        <div class="card">
          <div class="profile-image">
            <img src="./Assets/Main-Article.png" width="100%" alt="" />
          </div>
          <div class="writeup">
            <h2><%= randomPost.title %></h2>
            <p><%= randomPost.body %></p>
            <div class="profile-img">
              <img src="<%= randomPost.author.image %>" width="10%" alt="" />
              <div class="profile-info">
                <h3><%= randomPost.author.name %></h3>
                <p><%= randomPost.author.skill %></p>
              </div>
            </div>
          </div>
        </div>
      </a>
    </section>
    <% } else { %>
    <section class="second section-p1">
      <div class="container">
        <p>No posts available.</p>
      </div>
    </section>
    <% } %>
    <br />

    <main>
      <% if (posts.length> 0) { %> <% posts.forEach((post)=> { %>
      <!-- Individual Blog Post -->
      <div class="bg">
        <a class="post-link" href="/post/<%= post.id %>">
          <div class="post-image">
            <img src="./Assets/Article1.png" alt="Blog Post Image" />
          </div>
          <div class="post-details">
            <h2><%= post.title %></h2>
            <div class="centered-details">
              <div class="profile-img">
                <img
                  src="<%= post.author.image %>"
                  width="70px"
                  height="70px"
                  alt=""
                />
                <div class="profile-info">
                  <h3><%= post.author.name %></h3>
                  <p><%= post.author.skill %></p>
                </div>
              </div>
              <!-- <div class="author-info">
                <img
                  src="<%= post.author.image || './profile-pic' %>"
                  alt="Author Image"
                  width="100%"
                />
                <div class="author-details">
                  <h3><%= post.author.name %></h3>
                  <p><%= post.author.skill %></p>
                </div>
              </div> -->
            </div>
            <p><%= post.body %></p>
          </div>
        </a>
      </div>
      <% }); %> <% } %>
      <!-- End of Individual Blog Post -->
    </main>

    <footer class="section-p1">
      <div class="logo">
        <img src="./Assets/we tech.png" alt="" />
      </div>
      <div class="copy">
        <p>WeTech &copy; 2023 All Copyrights Reserved</p>
      </div>
    </footer>

    <script src="script.js"></script>
  </body>
</html>
